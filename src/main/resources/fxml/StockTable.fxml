<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<fx:root type="TableView" xmlns:fx="http://javafx.com/fxml/1" styleClass="stocks-table">
    <columns>
        <TableColumn fx:id="nameColumn" text="Stock Name" prefWidth="200" minWidth="100" maxWidth="300">
            <cellValueFactory>
                <PropertyValueFactory property="stockName" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="symbolColumn" text="Trading Symbol" prefWidth="140" minWidth="80" maxWidth="150">
            <cellValueFactory>
                <PropertyValueFactory property="tradingSymbol" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="ltpColumn" text="LTP" prefWidth="120" minWidth="20" maxWidth="150">
            <cellValueFactory>
                <PropertyValueFactory property="ltp" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn fx:id="deleteColumn" text="" prefWidth="40" minWidth="40" maxWidth="40" />
    </columns>
    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>
</fx:root> 